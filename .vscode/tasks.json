{
    "tasks": [
        {
            "type": "shell",
            "label": "Build web",
            "command": "set -o pipefail; qmake ../libmscore.pro && make -j8 2>&1 | tee build.log",
            "options": {
                "cwd": "${workspaceFolder}/build.web"
            },
            "problemMatcher":"$gcc"
        },
        {
            "type": "shell",
            "label": "Build macOS",
            "command": "make -j8 -f Makefile.osx release && make -j8 -f Makefile.osx install",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":"$gcc"
        },
        {
            "type": "shell",
            "label": "Build WASM",
            "command": "set -o pipefail; ~/Qt/5.13.2/wasm_32/bin/qmake ../libmscore.wasm.pro && make -j8  2>&1 | tee build.log",
            "options": {
                "cwd": "${workspaceFolder}/build.wasm"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${workspaceRoot}/build.wasm"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}